<div class="mt-4">
    <h3>Cập nhật khóa học</h3>

    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="exampleInputEmail1">name</label>
            <input type="text" value="{{course.name}}" name="name" class="form-control" placeholder="Enter name" />
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Mổ tả</label>
            <textarea value="{{course.description}}" name="description" class="form-control"
                placeholder="Enter description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">video ID</label>
            <input type="text" value="{{course.videoId}}" name="videoId" class="form-control"
                placeholder="Enter videoId" />
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Trình độ</label>
            <input type="text" value="{{course.level}}" name="level" class="form-control" placeholder="Enter level" />
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>